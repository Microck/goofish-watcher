# Discord
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_USER_ID=your_user_id_here

# OpenAI-compatible API (primary AI provider)
# Supports: OpenAI, local Ollama, ModelScope, and any OpenAI-compatible endpoint
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o

# NVIDIA NIM API (fallback if OpenAI not configured)
# Leave empty to use OpenAI only
NVIDIA_API_KEY=
NVIDIA_VISION_MODEL=meta/llama-3.2-90b-vision-instruct
NVIDIA_ENDPOINT=https://integrate.api.nvidia.com/v1/chat/completions

# Goofish/Xianyu Authentication
# Option 1: Direct cookie string
GOOFISH_COOKIE=

# Option 2: Path to JSON file with cookies (recommended)
GOOFISH_COOKIES_JSON_PATH=./cookies.json

# Database
DATABASE_PATH=./data/goofish.db

# Scanning defaults
DEFAULT_INTERVAL_MINUTES=60
DEFAULT_AI_THRESHOLD=0.7
MAX_LISTINGS_PER_SCAN=200
SEEN_STREAK_STOP=30
JITTER_MINUTES=5
DEDUPE_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO

# --- Multi-channel notifications (all optional, configure as needed) ---

# ntfy.sh notifications (https://ntfy.sh)
NTFY_TOPIC_URL=

# Bark iOS push notifications (https://github.com/Finb/Bark)
BARK_URL=

# Telegram bot notifications
# Get bot token from @BotFather, get chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# WeChat Work bot notifications
WX_BOT_URL=

# Generic webhook notifications
WEBHOOK_URL=
WEBHOOK_METHOD=POST
WEBHOOK_HEADERS={"X-API-TOKEN":"your-secret-token"}
WEBHOOK_BODY={"title":"{{title}}","content":"{{content}}"}
WEBHOOK_CONTENT_TYPE=JSON

# --- Account & proxy rotation (optional) ---

# Proxy pool (comma-separated)
PROXY_ROTATION_ENABLED=false
PROXY_POOL=
PROXY_ROTATION_MODE=per_task
PROXY_ROTATION_RETRY_LIMIT=2
PROXY_BLACKLIST_TTL=300

# Account state directory for rotation
ACCOUNT_ROTATION_ENABLED=false
ACCOUNT_ROTATION_MODE=per_task
ACCOUNT_ROTATION_STATE_DIR=./state
ACCOUNT_ROTATION_RETRY_LIMIT=2
ACCOUNT_BLACKLIST_TTL=300

# --- Web UI (optional) ---

# Enable FastAPI web interface on port 8000
ENABLE_WEB_UI=false
WEB_PORT=8000
WEB_USERNAME=admin
WEB_PASSWORD=admin123
